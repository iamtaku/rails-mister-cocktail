<table class>
  <thead>
    <tr>
      <th>Ingredients</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @doses.empty? %>
      <tr>
        <th>No ingredients yet...</th>
        <th></th>
        <th></th>
      </tr>
    <% else %>
      <% @doses.each do |dose| %>
        <tr>
          <th><%= dose.ingredient.name %></th>
          <th><%= dose.description %></th>
          <th><%= link_to dose_path(dose), method: :delete, class: 'trash' do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
          </th>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
